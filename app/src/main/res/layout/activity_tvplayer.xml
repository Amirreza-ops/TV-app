<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        <variable
            name="onClickItem"
            type="com.example.tvbinding.views.TVPlayer_activity.OnRotate" />
    </data>

    <RelativeLayout
        android:layoutDirection="rtl"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.TVPlayer_activity">


        <com.devbrackets.android.exomedia.ui.widget.VideoView
            android:id="@+id/video_view"
            android:play="@{progressBar}"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <ProgressBar
            android:visibility="visible"
            android:id="@+id/progressBar"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:onClick="@{onClickItem.onClick}"
            app:srcCompat="@drawable/baseline_fullscreen_24"
            app:tint="#FFFFFF"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="64dp"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</layout>


