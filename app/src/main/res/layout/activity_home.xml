<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        <variable
            name="activity"
            type="com.example.tvbinding.views.Home_activity" />
        
        <variable
            name="onClick"
            type="com.example.tvbinding.views.Home_activity.OnItemClick" />
    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:openDrawer="right"
        android:layoutDirection="rtl"
        tools:context=".views.Home_activity">

        <com.google.android.material.navigation.NavigationView
            app:headerLayout="@layout/layout_header_drawer"
            app:itemTextColor="@color/colorPrimary"
            app:itemIconTint="@color/colorPrimary"
            app:menu="@menu/menu_drawer"
            android:background="#fafafa"
            android:drawer="@{drawer}"
            android:activity="@{activity}"
            android:layout_gravity="right"
            android:layout_width="300dp"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/colorPrimary">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:onClick="@{(v)->onClick.onMenu(v, drawer)}"
                    android:background="?selectableItemBackgroundBorderless"
                    android:layout_marginRight="16dp"
                    app:srcCompat="@drawable/baseline_menu_24"
                    app:tint="#FFFFFF" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:layout_toLeftOf="@+id/imageView"
                    tools:text="تلویزیون"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

            </RelativeLayout>


            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_above="@+id/chipNavigation"
                android:layout_below="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <com.ismaeldivita.chipnavigation.ChipNavigationBar
                android:id="@+id/chipNavigation"
                android:elevation="18dp"
                android:activity="@{activity}"
                android:textView="@{textView}"
                app:cnb_menuResource="@menu/menu_bottom_navigation"
                app:cnb_unselectedColor="#737373"
                android:padding="8dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="56dp"/>


        </RelativeLayout>




    </androidx.drawerlayout.widget.DrawerLayout>

</layout>
